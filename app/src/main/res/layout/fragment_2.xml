<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/info_headpicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_nickname"
            android:text="昵称"
            android:textSize="30dp"
            android:layout_toRightOf="@id/info_headpicture"
            android:layout_alignTop="@id/info_headpicture"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_username"
            android:text="账号"
            android:textSize="20dp"
            android:layout_below="@id/info_nickname"
            android:layout_alignLeft="@id/info_nickname" />

    </RelativeLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="分享图片"
        android:id="@+id/bt_share"/>


</LinearLayout>